<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tambaksariku.IkanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pakan Ikan"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/pakan" />

            <ImageView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/pakan1"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/pakan2" />

            <ImageView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/pakan2"/>

            <TextView
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/pakan3" />

            <ImageView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/pakan3"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
