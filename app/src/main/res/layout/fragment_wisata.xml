<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tambaksariku.WisataFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:text="sialhkan pilih menu dibawah ini"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_pakan"
            android:onClick="bt_pakan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pakan"/>

        <ImageView
            android:id="@+id/bt_kuliner"
            android:onClick="bt_kuliner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:src="@drawable/kuliner"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_kerajinan"
            android:onClick="bt_kerajinan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/kerajinaan"/>

        <ImageView
            android:id="@+id/bt_pemindangan"
            android:onClick="bt_pemindangan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:src="@drawable/pemindangan"/>

    </LinearLayout>

</LinearLayout>
