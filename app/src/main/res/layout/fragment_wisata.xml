<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tambaksariku.WisataFragment">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:text="sialhkan pilih menu dibawah ini"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pakan"
                android:onClick="pakan_act"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/pakan"/>

            <ImageView
                android:id="@+id/img_kuliner"
                android:onClick="kuliner_act"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:src="@drawable/kuliner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_kerajinan"
                android:onClick="kerajinan_act"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/kerajinaan"/>

            <ImageView
                android:id="@+id/img_pemindangan"
                android:onClick="pemindangan_act"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:src="@drawable/pemindangan"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
